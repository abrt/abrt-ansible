---
# Variables listed here are applicable to all host groups

domain: faf.local
hostname: faf.local

rootmail: root@localhost.localdomain
smtp_server: localhost
smtp_port: 25
smtp_username:
smtp_password:

# disable when using LXC
selinux: true

# server alias used in httpd
httpd_alias:
httpd_host: 0.0.0.0
httpd_port: 80

# cache type either: memcached/simple/none
cache_type: memcached
memcached_memory: 64
memcached_port: 11211
memcached_maxconn: 1024

webfaf_on_root: true
secret_key: not_a_secret

ssl_key_src_path:
ssl_cert_src_path:
ssl_cert_chain_src_path:

ssl_key_dest_path: /etc/pki/tls/private/{{ domain }}.key
ssl_cert_dest_path: /etc/pki/tls/certs/{{ domain }}.cert
ssl_cert_chain_dest_path: /etc/pki/tls/certs/{{ domain }}.intermediate.cert

# connectstring to use for faf web & storage in format:
# driver://user:password@host:port/database
db_connectstring: postgresql:///faf

# set to true if this is the very first run of this playbook
# it will set-up postgresql database and initial data for faf
first_time_setup: false

# dangerous, delete and re-create PostgreSQL database
# (will wipe Postgre's data dir and re-create from scratch)
recreate_database: false

# configure to use custom repository for faf's packages
# custom_faf_repository_url: http://192.168.122.1:8001/

# force faf packages reinstallation
force_reinstall: false

# run faf's database migrations
migrate_db: false
