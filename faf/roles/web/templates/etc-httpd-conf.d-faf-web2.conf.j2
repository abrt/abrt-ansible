# WSGI handler
WSGIPythonOptimize 1
WSGISocketPrefix /var/spool/faf/wsgi2
WSGIDaemonProcess faf2 user=faf group=faf processes=3 threads=5
WSGIProcessGroup faf2
WSGIScriptAlias / /usr/lib/python2.7/site-packages/webfaf2/hub.wsgi

<Location />
    <IfModule mod_authz_core.c>
        # Apache 2.4
       Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Apache 2.2
        Order allow,deny
        Allow from all
    </IfModule>
</Location>

# project main
<Directory "/usr/lib/python2.7/site-packages/webfaf2/">
    Options Indexes
    IndexOptions FancyIndexing
    <IfModule mod_authz_core.c>
        # Apache 2.4
       Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Apache 2.2
